<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mrc.attendencesystem">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--//获取设备网络状态，禁用后无法获取网络状态-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--//网络权限，当禁用后，无法进行检索等相关业务-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!--//读取设备硬件信息，统计数据-->
    <uses-permission android:name="com.android.launcher.permission.READ_SETTINGS" />
    <!--//读取系统信息，包含系统版本等信息，用作统计-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--//获取设备的网络状态，鉴权所需网络代理-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--//允许sd卡写权限，需写入地图数据，禁用后无法显示地图-->
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <!--//获取统计数据-->
    <uses-permission android:name="android.permission.GET_TASKS" />
    <!--//鉴权所需该权限获取进程列表-->
    <uses-permission android:name="android.permission.CAMERA" />
    <!--//使用步行AR导航，配置Camera权限-->
    <!-- 这个权限用于进行网络定位 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- 这个权限用于访问GPS定位 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".AttendenceSystemApplication"
        android:allowBackup="true"
        android:icon="@mipmap/sign_in"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--//笔记本上的-->
        <!--<meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="O7DS7rFPuqsVGlGloVfP4rXxrkRrdHKX" />-->
        <!--//台式机上的-->
        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="op5LIoAK7Iplqvl1x8YBdTm6EWcbfVEG" />

        <activity
            android:name=".activity.LaunchActivity"
            android:launchMode="standard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Light.NoActionBar" />
        <activity android:name=".activity.ForgetPwdActivity" />
        <activity android:name=".activity.ResetPwdActivity" />
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/Light.NoActionBar" />

        <service
            android:name=".server.SocketConnectService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".activity.SearchFriendsAndGroupActivity"
            android:theme="@style/Light.NoActionBar" />
        <activity
            android:name=".activity.AddFriendsOrGroupsActivity"
            android:theme="@style/Light.NoActionBar" />
        <activity android:name=".activity.CreateGroupsActivity" />
        <activity
            android:name=".activity.LocationActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/Light.NoActionBar" />

        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote" />

        <activity
            android:name=".activity.ChatActivity"
            android:theme="@style/Light.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"
            android:launchMode="singleTask"/>
        <activity android:name=".activity.GetSignMessageActivity"
            android:label="签到记录"/>
        <activity android:name=".activity.ToSignActivity"
            android:label="群内签到"/>
        <activity android:name=".activity.SetSignActivity"
            android:label="发起签到设置"/>
        <activity android:name=".activity.GroupInformationActivity"
            android:label="关于群组"></activity>
    </application>

</manifest>