<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <TextView
        android:id="@+id/tv_others_name"
        android:layout_toRightOf="@+id/img_others_head_icon"
        android:textSize="@dimen/font_size_16sp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="周玉欣"/>
    <LinearLayout
        android:padding="8dp"
        android:layout_below="@+id/tv_others_name"
        android:layout_toRightOf="@+id/img_others_head_icon"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/others_chat_log_item_background">
        <TextView
            android:id="@+id/others_chat_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这是周玉欣的聊天记录"
            android:textSize="@dimen/font_size_18sp"
            android:ellipsize="none"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:maxLines="5"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/img_others_head_icon"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="8dp"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_head_icon"/>
</RelativeLayout>